<a class="boton mt-2 mb-3 btn btn-secondary" href="/">Inicio</a>
<div class="container text-center">
    <h1>Carrito {{_id}}</h1>
    <hr />
    <h3 class="my-4">Productos</h3>
    <div class="container row p-4 border border-3 rounded-4">
        {{#each productos}}
            <div class="col-3 my-3">
                <h5 class="mb-3">{{title}}: {{quantity}} </h5>
                <p>Precio unitario: ${{price}}</p>
                <p>Precio x{{quantity}}: ${{subT}}</p>
                <a href="/deleteProd/{{_id}}/{{id}}" class="btn btn-danger">Quitar 1</a>
            </div>
        {{/each}}
    <h3>Total: ${{total}}</h3>
    <a href="/{{_id}}/purchase" class="btn btn-success">Comprar</a>
    </div>
</div>